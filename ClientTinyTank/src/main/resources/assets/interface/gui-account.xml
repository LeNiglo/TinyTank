<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <screen id="main" controller="com.lefrantguillaume.graphicsComponent.graphics.WindowAccount">
        <layer id="background" childLayout="center">
            <panel valign="top" height="100%" align="center" childLayout="vertical">
                <panel height="5%" width="100%" childLayout="vertical">
                </panel>
                <panel height="35%" valign="top" childLayout="center">
                    <image filename="assets/img/logo.png" width="75%" height="100%" align="center"
                           childLayout="center">
                        <effect>
                            <onStartScreen name="fade" start="#0" end="#f" startDelay="1000" length="2000"/>
                        </effect>
                    </image>
                </panel>
            </panel>
        </layer>
        <layer id="foreground" backgroundColor="#0000" childLayout="vertical">
            <panel id="panel_top" height="50%" width="75%" align="center" childLayout="center">
            </panel>
            <panel id="panel_mid" height="30%" width="75%" align="center" childLayout="center">
                <control name="textfield" width="100%" height="50" align="center" valign="top" id="login"
                         maxLength="30"/>
                <control name="textfield" width="100%" height="50" align="center" valign="center" id="pass"
                         maxLength="20" passwordChar="*"/>
                <control name="button" label="Connect" id="ConnectButton" height="50" width="200" align="center"
                         valign="bottom" visibleToMouse="true">
                    <interact onClick="connect()"/>
                </control>
            </panel>
            <panel id="panel_bottom" height="20%" width="50%" align="center" childLayout="horizontal">
                <text id="ConnectMsg"
                      text="Là tu dois mettre ce texte à la bonne place et aussi mettre Login or password incorrect si il a fail son mdp"
                      valign="center" align="center" style='nifty-label'/>
            </panel>
        </layer>
    </screen>
</nifty>