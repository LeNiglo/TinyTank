<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <screen id="screen-account" controller="com.lefrantguillaume.components.graphicsComponent.graphics.WindowAccount">
        <layer id="background" childLayout="center">
            <panel valign="top" height="100%" align="center" childLayout="vertical">
                <panel height="5%" width="100%" childLayout="vertical">
                </panel>
                <panel height="35%" valign="top" childLayout="center">
                    <image filename="assets/img/logo.png" width="75%" height="100%" align="center"
                           childLayout="center">
                        <effect>
                            <onStartScreen name="fade" start="#0" end="#f" startDelay="10" length="200"/>
                        </effect>
                    </image>
                </panel>
            </panel>
        </layer>
        <layer id="foreground" backgroundColor="#0000" childLayout="vertical">
            <panel id="panel_top" height="50%" width="75%" align="center" childLayout="center">
            </panel>
            <panel id="panel_mid" height="30%" width="75%" align="center" childLayout="center">
                <control id="list-servers" name="listBox" vertical="optional" horizontal="off" displayItems="10"
                         viewConverterClass="com.lefrantguillaume.components.graphicsComponent.userInterface.ServerEntryConverter">
                    <control name="server-entry"  controller="de.lessvoid.nifty.controls.listbox.ListBoxItemController">
                        <!-- <interact onClick="onServerEntrySelected"/> -->
                    </control>
                </control>
            </panel>
            <panel id="panel_bottom" height="20%" width="50%" align="40%" childLayout="horizontal">
            </panel>
        </layer>
    </screen>

    <controlDefinition name="server-entry">
        <panel childLayout="horizontal" width="100%" align="center">
            <control id="#server-name" name="label" align="left" textHAlign="left" height="30px" width="*" wrap="true"/>
            <control id="#server-ip" name="label" align="right" textHAlign="left" height="30px" width="*" wrap="true"/>
            <effect>
                <onCustom customKey="focus" name="colorBar" post="false" color="#F15841" neverStopRendering="true"
                          timeType="infinite"/>
                <onCustom customKey="select" name="colorBar" post="false" color="#30B257" neverStopRendering="true"
                          timeType="infinite"/>
                <onHover name="focus" targetElement="#parent#parent"/>
                <onClick name="select" targetElement="#parent#parent"/>
            </effect>
        </panel>
    </controlDefinition>
</nifty>