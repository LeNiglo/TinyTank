<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <screen id="main" controller="com.lefrantguillaume.components.graphicsComponent.graphics.WindowAccount">
        <layer id="background" childLayout="center">
            <panel valign="top" height="100%" align="center" childLayout="vertical">
                <panel height="5%" width="100%" childLayout="vertical">
                </panel>
                <panel height="35%" valign="top" childLayout="center">
                    <image filename="assets/img/logo.png" width="75%" height="100%" align="center"
                           childLayout="center">
                        <effect>
                            <onStartScreen name="fade" start="#0" end="#f" startDelay="10" length="200"/>
                        </effect>
                    </image>
                </panel>
            </panel>
        </layer>
        <layer id="foreground" backgroundColor="#0000" childLayout="vertical">

        </layer>
    </screen>
</nifty>